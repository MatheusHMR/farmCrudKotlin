<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/LV_farms"
        android:layout_width="333dp"
        android:layout_height="257dp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="458dp" />

    <EditText
        android:id="@+id/ET_farm_name"
        android:layout_width="242dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint="Farm's Name"
        android:inputType="text"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="64dp" />

    <TextView
        android:id="@+id/TV_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Farm's CRUD"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="33dp" />

    <Button
        android:id="@+id/BT_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="Create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <EditText
        android:id="@+id/ET_farm_register"
        android:layout_width="242dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="Farm's Register"
        android:inputType="text"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="121dp" />

    <Button
        android:id="@+id/BT_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BT_delete"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toEndOf="@+id/BT_create"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/BT_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <EditText
        android:id="@+id/ET_latitude"
        android:layout_width="217dp"
        android:layout_height="66dp"
        android:ems="10"
        android:hint="Latitude"
        android:inputType="text"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="257dp" />

    <EditText
        android:id="@+id/ET_longitude"
        android:layout_width="217dp"
        android:layout_height="66dp"
        android:ems="10"
        android:hint="Longitude"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="183dp" />

    <EditText
        android:id="@+id/ET_valor"
        android:layout_width="217dp"
        android:layout_height="66dp"
        android:ems="10"
        android:hint="Valor"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="332dp" />

</androidx.constraintlayout.widget.ConstraintLayout>